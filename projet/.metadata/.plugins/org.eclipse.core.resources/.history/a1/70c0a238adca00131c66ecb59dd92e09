package view.actionListeners;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import view.customSwingComp.JButtonDesign;

public class ALHome implements ActionListener
{

	@Override
	public void actionPerformed(ActionEvent e)
	{
	     switch (e.getActionCommand())
	     {
	         case "create":
	        	 System.out.println("bouton créer serveur cliqué");
	        	 JButtonDesign button = (JButtonDesign) e.getSource();
	             break;
	         case "stats":
	        	 System.out.println("bouton afficher stats serveur cliqué");
	        	 break;
	         case "list":
	        	 System.out.println("bouton lister serveurs cliqué");
	             break;
	         default:
	             throw new IllegalArgumentException("Invalid action");
	     }
	}
	
}
