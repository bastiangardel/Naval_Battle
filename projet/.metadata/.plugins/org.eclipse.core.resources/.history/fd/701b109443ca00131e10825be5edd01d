package view;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JFrame;

public class JFrameWithBGimg extends JFrame
{
	private static final long serialVersionUID = -7170836469966138941L;
	
	private BufferedImage bgImg;
	
	public JFrameWithBGimg(String path) throws IOException
	{
		bgImg = ImageIO.read(new File("/path/to/some/image"));
	}
}
