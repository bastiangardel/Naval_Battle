package view;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;

public class JFrameWithBGimg extends JFrame
{
	private static final long serialVersionUID = -7170836469966138941L;
	
	public JFrameWithBGimg(String path) throws IOException
	{
		BufferedImage bgImg = ImageIO.read(new File("/path/to/some/image"));
		JLabel background = new JLabel(new ImageIcon(bgImg));
	}
}
